<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:GroupCalendar.Views.Controls;assembly=GroupCalendar.Views"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    >

    <Style TargetType="{x:Type controls:CustomTextBox}" BasedOn="{StaticResource {x:Type hc:TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CustomTextBox}">
                    <Border
                        CornerRadius="4"
                        x:Name="LayoutRoot"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        >
                        <Grid>
                            <ScrollViewer
                                Grid.Column="0"
                                x:Name="PART_ContentHost"
                                />

                            <Border
                                IsHitTestVisible="False"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                >
                                <Border.Visibility>
                                    <MultiBinding Converter="{StaticResource AllFalsyToVisibleConverter}">
                                        <Binding
                                            Path="Text"
                                            RelativeSource="{RelativeSource TemplatedParent}"
                                            />
                                        <Binding
                                            Path="PlaceholderText"
                                            RelativeSource="{RelativeSource TemplatedParent}"
                                            Converter="{StaticResource FalsyToTrueConverter}"
                                            />
                                    </MultiBinding>
                                </Border.Visibility>


                                <TextBlock
                                    Text="{TemplateBinding PlaceholderText}"
                                    TextAlignment="{TemplateBinding TextAlignment}"
                                    Foreground="LightGray"
                                    Opacity="0.5"
                                    TextWrapping="{TemplateBinding TextWrapping}"
                                    Margin="{Binding Padding, RelativeSource={RelativeSource TemplatedParent}}"
                                    />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:CustomPasswordBox}" BasedOn="{StaticResource {x:Type PasswordBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CustomPasswordBox}">
                    <Border
                        CornerRadius="4"
                        x:Name="LayoutRoot"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        >
                        <Grid>
                            <ScrollViewer
                                Grid.Column="0"
                                x:Name="PART_ContentHost"
                                />

                            <Border
                                IsHitTestVisible="False"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                >
                                <Border.Visibility>
                                    <MultiBinding Converter="{StaticResource AllFalsyToVisibleConverter}">
                                        <Binding
                                            Path="Text"
                                            RelativeSource="{RelativeSource TemplatedParent}"
                                            />
                                        <Binding
                                            Path="PlaceholderText"
                                            RelativeSource="{RelativeSource TemplatedParent}"
                                            Converter="{StaticResource FalsyToTrueConverter}"
                                            />
                                    </MultiBinding>
                                </Border.Visibility>


                                <TextBlock
                                    Text="{TemplateBinding PlaceholderText}"
                   
                                    Foreground="LightGray"
                                    Opacity="0.5"
                            
                                    Margin="{Binding Padding, RelativeSource={RelativeSource TemplatedParent}}"
                                    />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>