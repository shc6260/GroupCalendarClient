<UserControl
    x:Class="GroupCalendar.Views.Account.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroupCalendar.Views.Account"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:controls="clr-namespace:GroupCalendar.Views.Controls"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    >
    <Grid>
        <Grid Margin="10 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Style="{StaticResource TitleStyle}"
                Foreground="Black"
                Text="회원가입"
                />

            <TextBlock
                Grid.Row="1"
                Style="{StaticResource BoldTextStyle}"
                Text="아이디"
                />

            <hc:TextBox
                Grid.Row="3"
                VerticalAlignment="Center"
                Text="{Binding Id, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                hc:InfoElement.Placeholder="Please enter the password"
                />

            <TextBlock
                Grid.Row="5"
                Style="{StaticResource BoldTextStyle}"
                Text="비밀번호"
                />

            <controls:BindablePasswordBox
                Grid.Row="7"
                VerticalAlignment="Center"
                Password="{Binding Password}"
                PlaceholderText="비밀번호"
                />

            <TextBlock
                Grid.Row="9"
                Style="{StaticResource BoldTextStyle}"
                Text="이름"
                />
            <controls:CustomTextBox
                Grid.Row="11"
                VerticalAlignment="Center"
                Text="{Binding Name, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                />

            <Button
                Grid.Row="13"
                HorizontalAlignment="Stretch"
                Content="회원가입"
                Command="{Binding RegisterCommand}"
                />
        </Grid>
    </Grid>
</UserControl>
